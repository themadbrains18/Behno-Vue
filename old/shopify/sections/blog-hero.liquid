
<render-blog-blog-hero :shopify-data="{
    checkSection: `{{ section.settings.checkSection }}`,
    heroHeading:`{{ section.settings.heroHeading }}`,
    heroImgDesktop : {
        src : `{{ section.settings.heroImgDesktop | img_url : "" }}`,
        placeholder: `{{ section.settings.heroImgDesktop | img_url : "50x50" }}`,
        alt: `{{ section.settings.heroImgDesktop.alt }}`
    },
    heroImgMobile : {
        src : `{{ section.settings.heroImgMobile | img_url : "" }}`,
        placeholder: `{{ section.settings.heroImgMobile | img_url : "50x50" }}`,
        alt: `{{ section.settings.heroImgMobile.alt }}`
    },
    mode : `{{ blog.metafields.my_fields.landscape_mode }}`,
}">
</render-blog-blog-hero>
{% schema %}
    {
        "name":"Blog Hero",
        "settings":[
            {
                "id": "checkSection",
                "type": "checkbox",
                "label": "Show Section",
                "default": true
            },
            
            {
                "id":"heroHeading",
                "label":"Hero Heading",
                "type":"text",
                "default":"I AM:"
            },
            {
                "id":"heroImgDesktop",
                "label":"Hero Img For Desktop",
                "type":"image_picker"
            },
            {
                "id":"heroImgMobile",
                "label":"Hero Img For Mobile",
                "type":"image_picker"
            }
        ]
    }
{% endschema %}