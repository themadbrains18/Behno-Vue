{% capture SlideImage %}
[
   {% for block in section.blocks %}
    {
	   imgUrl : {
          src : `{{ block.settings.secImg | img_url : "" }}`,
          placeholder: `{{ block.settings.secImg | img_url : "50x50" }}`,
          alt: `{{ block.settings.secImg.alt }}`
       }
    }{% unless forloop.last %},{% endunless %}
   {% endfor %}
]
{% endcapture %}
