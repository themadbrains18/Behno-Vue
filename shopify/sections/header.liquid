<render-my-header :shopify-data="{
  search: '{{ 'search-icon.svg' | asset_url }}',
  bag: '{{ 'shopping-bag-icon.svg' | asset_url }}',
  HeaderNavData: {{ HeaderNavData }},
  MobileNavData: {{ MobileNavData }}
}">
</render-my-header>