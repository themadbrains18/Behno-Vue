{% capture paragraph %}
[
   {% for block in section.blocks %}
    {% if block.type == "paragraph" %}
            {
                paragraph : `{{ block.settings.paragraph }}`
            }{% unless forloop.last %},{% endunless %}
        {% endif %}
   {% endfor %}
]
{% endcapture %}


{% capture sliderImg %}
[
   {% for block in section.blocks %}
   {% if block.type == "slide" %}
    {
	   imgUrl : {
          src : `{{ block.settings.sliderImg | img_url : "" }}`,
          placeholder: `{{ block.settings.sliderImg | img_url : "50x50" }}`,
          alt: `{{ block.settings.sliderImg.alt }}`
       }
    }{% unless forloop.last %},{% endunless %}
    {% endif %}
   {% endfor %}
]
{% endcapture %}
