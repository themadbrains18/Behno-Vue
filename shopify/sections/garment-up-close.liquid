
{% capture SlideImage %}
[
   {% for block in section.blocks %}
    {
	   imgUrl : {
          src : `{{ block.settings.image | img_url : "" }}`,
          placeholder: `{{ block.settings.image | img_url : "50x50" }}`,
          alt: `{{ block.settings.image.alt }}`
       }
    }{% unless forloop.last %},{% endunless %}
   {% endfor %}
]
{% endcapture %}



<render-sense-of-behno-garment-garment-up-close :shopify-data="{
    secHeading : `{{ section.settings.secHeading }}`,
    Slide :  {{ SlideImage }}
  }">
</render-garment-garment-up-close>




