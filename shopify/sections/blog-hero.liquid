{%- capture paragraphs -%}
[
        {% for block in section.blocks %}
            {
                {% if blocks.type = "bodyText" %}
                    heroInfo:`{{ block.settings.heroInfo }}`,
                {% endif %}
            }{% unless forloop.last %},{% endunless %}
         {% endfor %}
    ]
{%- endcapture -%}

<render-blog-blog-hero :shopify-data="{
    heroHeading:`{{ section.settings.heroHeading }}`,
    paragraphs: {{ paragraphs }},
    heroImgDesktop : {
        src : `{{ section.settings.heroImgDesktop | img_url : "" }}`,
        placeholder: `{{ section.settings.heroImgDesktop | img_url : "50x50" }}`,
        alt: `{{ section.settings.heroImgDesktop.alt }}`
    },
    heroImgMobile : {
        src : `{{ section.settings.heroImgMobile | img_url : "" }}`,
        placeholder: `{{ section.settings.heroImgMobile | img_url : "50x50" }}`,
        alt: `{{ section.settings.heroImgMobile.alt }}`
    }
}">
</render-blog-blog-hero>

{% schema %}
    {
        "name":"Blog Hero",
        "settings":[
            {
                "id":"heroHeading",
                "label":"Hero Heading",
                "type":"text",
                "default":"I AM:"
            },
            {
                "id":"heroImgDesktop",
                "label":"Hero Img For Desktop",
                "type":"image_picker"
            },
            {
                "id":"heroImgMobile",
                "label":"Hero Img For Mobile",
                "type":"image_picker"
            }
        ],
        "blocks" : [
            {
                "name":"Body Text",
                "type":"bodyText",
                "settings":[
                    {
                        {
                            "id":"heroInfo",
                            "label":"Hero Info ",
                            "type":"textare"
                        }
                    }
                ]
            }
        ]
        
    }
{% endschema %}