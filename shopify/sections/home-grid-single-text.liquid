<render-home-grid-single-text :shopify-data="{
            image: '{{ section.settings.image | img_url }}',
  		  	title: '{{ section.settings.title }}',
     	 	btntext: '{{ section.settings.linkText }}',
  			btnlink: '{{ section.settings.link }}',
			toptext: '{{ section.settings.toptext }}',
			middletop: '{{ section.settings.middletop }}',
			middlebottom: '{{ section.settings.middlebottom }}',
			bottomtext: '{{ section.settings.bottomtext }}',
