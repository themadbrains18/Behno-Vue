 	  {
        "id": "linkText",
        "type": "text",
        "label": "t:sections.home_grid_single_text.settings.btntext.label"
      },
      {
        "id": "link",
        "type": "url",
        "label": "t:sections.home_grid_single_text.settings.link.label"
      },
	  {
        "id": "toptext",
